{
    "compilerOptions": {
        "baseUrl": ".",
       // "paths": { "*": [ "@types/*" ] },
        "target":"es2019",
        "module":"commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": false,
        "jsx": "react"
    },
    "include": [
        "web/**/*",
        "logger/**/*",
        "controller/**/*",
        "config/**/*", 
        "**/*.ts", 
        "app.ts"
    ]
}
